
<div class="login_container">
   
    <h1> <%= @user.first_name %> </h1> this is your dashboard!

  <p><a href="/entry/new"><input type="button" value="new post"></a></p>
   
    <p><a href="/logout"><input type="button" value="logout"></a></p>

<div class="row mt-4">
	<div class="col">
		<h3 class="text-center">Welcome to SEI's Forgetful Todo List</h3>
	</div>
</div>

	<% if @entry.empty? %>
	<div class="row">
		<div class="col">
			<p class="text-center">
				Looks like you haven't created any todos yet. Get started today by 
				<a href="/todo/new">creating your first one</a>
			</p>		
		</div>
	</div>
	<% else %>
		<div class="row mt-5">
			<div class="col">
				<h3>Hurry up and complete these todos</h3>
				<p>These todo's are going to disappear as soon as "someone" restarts the server so Ã¡ndale!</p>
				<p>
					<a href="/entry/new">Create a New Todo</a>
				</p>
			</div>
			<div class="col">
				<h3>Current Todos</h3>
				<ul>
					<% @entry.each do |entry| %>
						<li class="border p-3 row">
							<div class="col-lg-9">
								Name: <%= entry.title %>
								<br>
								Description: <%= entry.message %>
							</div>
							<div class="col-lg-3">
								<a href="/entry/edit/<%= entry.id %>" class="btn btn-outline-dark btn-sm">Edit</a>
								<a href="/entry/delete/<%= entry.id %>" class="btn btn-outline-dark btn-sm">Delete</a>	
							</div>
						</li>	
					<% end %>
				</ul>
			</div>
		</div>		
	<% end %>
</div>

