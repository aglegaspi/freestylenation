<!-- LAYOUT SOURCE: https://www.w3schools.com/howto/tryit.asp?filename=tryhow_css_blog_layout-->
 
    <div class="dashboard_header">
      <h1>FREESTYLE NATION</h1>
    </div>

    <div class="dashboard_row">

      <div class="dashboard_leftcolumn">

        <% if @entries.empty? %>
            <p>
            If you are not seeing any posts. Contact <a href=“mailto:lex83nyc@gmail.com”>Lex</a> ASAP!
            </p>		
        <% else %>

           <% @entries.each do |entry| %>
            <div class="dashboard_card">
              <h2><%= entry.title %></h2>
              <h5>Posted by: <%= entry.user.nickname %></h5>
              <p><%= entry.message %></p>

               <p>
                <% if entry.user_id == session[:user_id] %>
                <span class="user_post_mods">
                <a href="/entry/edit/<%= entry.id %>">Edit</a> | <a href="/entry/delete/<%= entry.id %>">Delete</a>
                </span>
                <% end %>
              </p>
              </div>
            <% end %>
            <% end %>

        </div>

      <div class="dashboard_rightcolumn">
        <div class="dashboard_card">
          <h2>Yo <%= @user.nickname %>!</h2>
            <a href="/entry/new"><div class="dashboard_fakeimg" style="height:100px;">NEW POST</div></a>
            <a href="/profile/<%= @user.id %>"><div class="dashboard_fakeimg" style="height:100px;">VIEW PROFILE</div></a>
            <a href="/logout"><div class="dashboard_fakeimg" style="height:100px;">LOGOUT</div></a>
        </div>

        <div class="dashboard_card">
          <h3>Stop Look and Listen!</h3>
            <iframe src="https://open.spotify.com/embed/user/22nhuzmvmkyfkyyipwcf7dtpi/playlist/78KY9LdO6VnyUaxSrCsTKi" width="300" height="680" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
        </div>

        <div class="dashboard_card">
          <h3>Jam of the Day</h3>
          <p><img src="/images/artwork/lisa_lisa_-_i_wonder_if.jpg" alt="" style="width: 300px;"></p>
        </div>
      </div>
    </div>

    <div class="dashboard_footer">
      <h2>Dedicated to all the Freestyle fans.</h2>
    </div>
